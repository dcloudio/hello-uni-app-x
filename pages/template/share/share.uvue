			shareSnapShot() {
				uni.hideToast()
				uni.getElementById("viewshot")?.takeSnapshot(
					{
						success: function (res) {
						
							uni.shareWithSystem({
								imageUrl: res.tempFilePath,
								type:'image',
								success(res) {
									console.log('Shared----------------------------success')
									// 分享完成，请注意此时不一定是成功分享
								},
